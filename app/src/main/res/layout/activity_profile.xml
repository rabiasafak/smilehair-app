<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Üst Bar - Geri Butonu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Geri"
            android:tint="@color/primaryColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Profilim"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor" />

    </RelativeLayout>

    <!-- Scroll İçeriği -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profil Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_profile_placeholder"
                        app:civ_border_width="3dp"
                        app:civ_border_color="@color/primaryColor"/>

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kullanıcı Adı"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email@example.com"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@android:color/darker_gray"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Kişisel Bilgiler -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kişisel Bilgiler"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telefon Numarası"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Doğum Tarihi"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDateOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cinsiyet"
                        android:layout_marginTop="12dp"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"/>

                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_marginTop="4dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kan Grubu (Opsiyonel)"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBloodType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alerjiler (Virgül ile ayırın)"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAllergies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tedavi Öncesi Fotoğraflar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tedavi Öncesi Fotoğraflar"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="3">

                <!-- Saç -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/ivHairPhoto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_info"
                        android:background="@drawable/circle_background"
                        android:padding="16dp"
                        android:scaleType="centerCrop" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadHair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saç"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"
                        android:enabled="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>

                <!-- Sakal -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/ivBeardPhoto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_info"
                        android:background="@drawable/circle_background"
                        android:padding="16dp"
                        android:scaleType="centerCrop" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadBeard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sakal"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"
                        android:enabled="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>

                <!-- Bıyık -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivMustachePhoto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_info"
                        android:background="@drawable/circle_background"
                        android:padding="16dp"
                        android:scaleType="centerCrop" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadMustache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bıyık"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"
                        android:enabled="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />

                </LinearLayout>

            </LinearLayout>

            <!-- Butonlar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Profili Düzenle"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kaydet"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çıkış"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>

            <!-- Tedaviler Başlık -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tedavilerim"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"/>

            <!-- Aktif Tedaviler -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktif Tedaviler"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvNoActiveTreatments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aktif tedavi bulunmuyor"
                android:textAlignment="center"
                android:padding="20dp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewActiveTreatments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>

            <!-- Tamamlanan Tedaviler -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geçmiş Tedaviler"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvNoCompletedTreatments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geçmiş tedavi bulunmuyor"
                android:textAlignment="center"
                android:padding="20dp"
                android:textColor="@android:color/darker_gray"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCompletedTreatments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
